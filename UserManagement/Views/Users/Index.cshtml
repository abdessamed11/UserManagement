@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<a class="btn btn-info" asp-action="Add">Add New users</a>
<table class="table table-striped table-bordered mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary"  asp-action="ManageRoles" asp-route-userId="@user.Id">Edit Roles</a>
                    <a class="btn btn-outline-info d-inline"  asp-action="EditUsers" asp-route-userId="@user.Id">Edit User</a>
                    <a class="btn btn-danger d-inline" asp-action="Delete" asp-route-id="@user.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>